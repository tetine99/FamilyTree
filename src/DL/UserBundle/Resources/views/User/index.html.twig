{% extends 'DLFamilytreeBundle::base.html.twig' %}

{% block stylesheets %}
<link rel="stylesheet" href="{{ asset('bundles/dluser/css/userindex.css') }}" />
{% endblock%}

{% block body %}

<div class="container" style="background-image:url({{ asset('images/view/arbres.jpg') }})">

    <div class="content" >

        <h1 class="titre">Page de gestion des utilisateurs inscrit </h1>


        {% for user in listUser %}

        <div class="userinfo">



            <tr>
                <p>
                nom utilisateur : {{ user.username }}
                <br/>
                Adresse E-mail : {{ user.email }}
                <br/>
                Suppression : <a href="{{path('user_del', {'id': user.id})}}">Supprimer</a>
                <br/>
                Modification : <a href="{{path('user_update', {'id': user.id})}}">Modifier</a>
            </p>



        </div>
{% endfor %}
    </div>

</div>

{% endblock %}
