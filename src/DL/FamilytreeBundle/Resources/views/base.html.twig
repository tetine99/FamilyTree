<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}test{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('bundles/shop/css/style.css') }}" type="text/css" media="all" />
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>

    <body>
        {% block body %}
            <header>

                {% block nav %}
                    <nav>
                        <a href="{{path('fos_user_registration_register')}}">Inscription</a>
                        <a href="{{path('dl_familytree_default_index')}}">Acceuil</a><br/>

                        {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                            Connecté en tant que {{ app.user.username }}
                            -
                            <a href="{{ path('fos_user_security_logout') }}">Déconnexion</a>
                        {% else %}
                            <a href="{{ path('fos_user_security_login') }}">Connexion</a>
                        {% endif %}

                        {% if is_granted('ROLE_ADMIN') %}
                            <li><a href="{{ path('user_index') }}">Gestion des utilisateurs</a></li>
                            {% endif %}
                    </nav>
                {% endblock %}

            </header>
        {% endblock %}
    {% block javascripts %}{% endblock %}
</body>
</html>
